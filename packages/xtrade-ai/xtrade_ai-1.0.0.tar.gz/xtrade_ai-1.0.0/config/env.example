# XTrade-AI Environment Configuration
# Copy this file to .env and update the values

# Environment
XTRADE_ENV=development
XTRADE_LOG_LEVEL=INFO
XTRADE_DATA_DIR=/app/data
XTRADE_MODEL_DIR=/app/models
XTRADE_LOG_DIR=/app/logs
XTRADE_CONFIG_DIR=/app/config

# Database Configuration
POSTGRES_DB=xtrade_ai
POSTGRES_USER=xtrade_user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_DEBUG=false

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_PORT=9090

# Trading Configuration
TRADING_INITIAL_BALANCE=10000.0
TRADING_MAX_POSITIONS=10
TRADING_RISK_TOLERANCE=0.02
TRADING_STOP_LOSS=0.02
TRADING_TAKE_PROFIT=0.05
TRADING_COMMISSION_RATE=0.001
TRADING_SLIPPAGE=0.0005

# Model Configuration
MODEL_STATE_DIM=545
MODEL_ACTION_DIM=4
MODEL_HIDDEN_DIM=128
MODEL_LEARNING_RATE=3e-4
MODEL_BATCH_SIZE=64
MODEL_ENABLE_XGBOOST=true
MODEL_ENABLE_RISK_MANAGEMENT=true

# External APIs (Optional)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
POLYGON_API_KEY=your-polygon-key
BINANCE_API_KEY=your-binance-key
BINANCE_SECRET_KEY=your-binance-secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Slack/Webhook Configuration (Optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# SSL Configuration (Production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Development Settings
DEBUG=false
RELOAD=true
TESTING=false
