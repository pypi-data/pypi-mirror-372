<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Odoo Release tree view -->
        <record id="view_odoo_release_tree" model="ir.ui.view">
            <field name="name">odoo.release.tree</field>
            <field name="model">odoo.release</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="release_date"/>
                    <field name="odoo_version_id"/>
                    <field name="odoo_instance_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <!-- Odoo Release form view -->
        <record id="view_odoo_release_form" model="ir.ui.view">
            <field name="name">odoo.release.form</field>
            <field name="model">odoo.release</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="release_date"/>
                            <field name="odoo_version_id"/>
                        </group>
                        <notebook>
                            <page string="Odoo Instances">
                                <field name="odoo_instance_ids" context="{'default_odoo_release_id': active_id}">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="branch"/>
                                        <!-- Add other fields as needed -->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Odoo Release action -->
        <record id="action_odoo_release" model="ir.actions.act_window">
            <field name="name">Odoo Releases</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoo.release</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
