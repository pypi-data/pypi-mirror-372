<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view for odoo.instance.process -->
    <record id="odoo_instance_process_tree" model="ir.ui.view">
        <field name="name">odoo.instance.process.tree</field>
        <field name="model">odoo.instance.process</field>
        <field name="arch" type="xml">
            <tree string="Processes">
                <field name="name" />
                <field name="odoo_version_id" options="{'no_create': True}" />
                <field name="module_ids" widget="many2many_tags" />
                <field name="instance_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <!-- Form view for odoo.instance.process -->
    <record id="odoo_instance_process_form" model="ir.ui.view">
        <field name="name">odoo.instance.process.form</field>
        <field name="model">odoo.instance.process</field>
        <field name="arch" type="xml">
            <form string="Process">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="odoo_version_id" />
                        <field name="module_ids" widget="many2many_tags"
                            options="{'no_create': True}"
                            domain="[('odoo_version_id', '=', odoo_version_id)]" />
                        <field name="description" widget="text" />
                        <field name="handbook_url" widget="url" />
                        <field name="instance_ids" widget="many2many_tags" class="oe_read_only" />

                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
