<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="import_requirements_wizard_form_view" model="ir.ui.view">
        <field name="name">import.requirements.wizard.form.view</field>
        <field name="model">odoo.instance.import.requirements.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="requirements_txt"/>
                <footer>
                    <button name="action_import" string="Import" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="import_requirements_wizard_action" model="ir.actions.act_window">
        <field name="name">Import Requirements</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoo.instance.import.requirements.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
