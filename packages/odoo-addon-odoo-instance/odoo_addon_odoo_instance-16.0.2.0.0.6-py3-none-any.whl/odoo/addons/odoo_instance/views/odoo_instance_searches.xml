<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="odoo_instance_search" model="ir.ui.view">
            <field name="name">odoo.instance.search</field>
            <field name="model">odoo.instance</field>
            <field name="arch" type="xml">
                <search string="Odoo Instances">
                    <field name="name" />
                    <field name="odoo_version_id" />
                    <field name="instance_type" />
                    <field name="partner_id" />
                    <filter name="odoo_version_id" string="Odoo Version"
                        domain="[]" context="{'group_by':'odoo_version_id'}" />
                    <filter name="my_instances" string="My Instances"
                        domain="['|', ('technician_ids', 'in', [uid]), ('functional_ids', 'in', [uid])]"
                        help="Instances where I am a technician or functional" />
                </search>
            </field>
        </record>


        <record id="view_odoo_instance_module_search" model="ir.ui.view">
            <field name="name">odoo.instance.module.search</field>
            <field name="model">odoo.instance.module</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="technical_name" />
                    <field name="odoo_version_id" />
                    <field name="instance_ids" />
                    <filter name="odoo_version_id" string="Odoo Version"
                        domain="[]" context="{'group_by':'odoo_version_id'}" />
                    <filter name="is_odoo_module" string="Odoo Modules"
                        domain="[('is_odoo_module', '=', True)]" />
                    <filter name="odoo_12_0" string="Odoo 12.0"
                        domain="[('odoo_version_id.name', '=', '12.0')]" />
                    <filter name="odoo_14_0" string="Odoo 14.0"
                        domain="[('odoo_version_id.name', '=', '14.0')]" />
                    <filter name="Module Type" string="Module Type"
                        domain="[]" context="{'group_by':'module_type'}" />
                    <filter name="OCA Modules" string="OCA Modules"
                        domain="[('module_type', '=', 'OCA')]" />
                    <filter name="Core Modules" string="Core Modules"
                        domain="[('module_type', '=', 'core')]" />
                    <filter name="Custom Modules" string="Custom Modules"
                        domain="[('module_type', '=', 'custom')]" />
                    <filter name="Other Modules" string="Other Modules"
                        domain="[('module_type', '=', 'other')]" />
                    <filter name="Dependencies" string="Dependencies"
                        domain="[('module_type', '=', 'dep')]" />


                </search>
            </field>
        </record>

        <record id="view_odoo_instance_process_search" model="ir.ui.view">
            <field name="name">odoo.instance.process.search</field>
            <field name="model">odoo.instance.process</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="odoo_version_id" />
                    <field name="instance_ids" />
                    <filter name="odoo_version_id" string="Odoo Version"
                        domain="[]" context="{'group_by':'odoo_version_id'}" />
                    <filter name="odoo_12_0" string="Odoo 12.0"
                        domain="[('odoo_version_id.name', '=', '12.0')]" />
                    <filter name="odoo_14_0" string="Odoo 14.0"
                        domain="[('odoo_version_id.name', '=', '14.0')]" />
                </search>
            </field>
        </record>


        <!-- Odoo Release search view -->
        <record id="view_odoo_release_search" model="ir.ui.view">
            <field name="name">odoo.release.search</field>
            <field name="model">odoo.release</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="odoo_version_id" />
                    <field name="release_date" />
                    <group expand="0" string="Group By">
                        <filter name="odoo_version_id" string="Odoo Version" domain="[]"
                            context="{'group_by': 'odoo_version_id'}" />
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>
