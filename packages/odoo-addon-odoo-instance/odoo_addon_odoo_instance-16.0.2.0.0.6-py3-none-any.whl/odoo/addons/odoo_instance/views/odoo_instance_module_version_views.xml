<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view for odoo.instance.module.version -->
    <record id="view_odoo_instance_module_version_tree" model="ir.ui.view">
        <field name="name">odoo.instance.module.version.tree</field>
        <field name="model">odoo.instance.module.version</field>
        <field name="arch" type="xml">
            <tree string="Odoo Instance Module Versions">
                <field name="name"/>
                <field name="module_id"/>
                <field name="instance_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- Form view for odoo.instance.module.version -->
    <record id="view_odoo_instance_module_version_form" model="ir.ui.view">
        <field name="name">odoo.instance.module.version.form</field>
        <field name="model">odoo.instance.module.version</field>
        <field name="arch" type="xml">
            <form string="Odoo Instance Module Version">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="module_id"/>
                    </group>
                    <group string="Instances">
                        <field name="instance_ids" nolabel="1" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
