<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_tax_vsc_form" model="ir.ui.view">
        <field name="name">vsc.account.tax.form</field>
        <field name="model">account.tax</field>
        <field
            name="inherit_id"
            ref="l10n_it_account_vat_period_end_settlement.view_tax_form_vat"
        />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='exclude_from_vat_settlements']"
                position="after"
            >
                <field name="vsc_exclude_active_operation" />
                <field name="vsc_exclude_passive_operation" />
                <field name="vsc_exclude_vat" />
            </xpath>
        </field>
    </record>
</odoo>
