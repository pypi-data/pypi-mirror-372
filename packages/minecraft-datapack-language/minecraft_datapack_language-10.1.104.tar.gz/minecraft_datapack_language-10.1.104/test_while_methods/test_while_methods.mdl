// test_while_methods.mdl - Test different while loop methods
pack "test_while_methods" "Test while loop methods" 82;

namespace "test_while_methods";

// Number variables for scoreboard storage
var num counter = 0;
var num loop_count = 0;

function "main" {
    // Test recursion method (default)
    while "$counter$ < 5" {
        say "Recursion loop: $counter$";
        counter = $counter$ + 1;
    }
    
    // Test explicit recursion method
    while "$loop_count$ < 3" method="recursion" {
        say "Explicit recursion: $loop_count$";
        loop_count = $loop_count$ + 1;
    }
    
    // Test schedule method
    while "$counter$ < 10" method="schedule" {
        say "Schedule loop: $counter$";
        counter = $counter$ + 1;
    }
}

// Hook to run main function every tick
on_tick "test_while_methods:main";
