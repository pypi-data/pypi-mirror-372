<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="becomecooperator_energetica" name="becomecooperator" inherit_id="cooperator_website.becomecooperator">
        <xpath expr="//input[@id='email']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
        <xpath expr="//input[@id='confirm_email']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
    </template>

    <template id="contact_template_energetica" name="contact_template" inherit_id="cooperator_website.contact_template">
        <xpath expr="//div[@name='lang_container']" position="attributes">
            <attribute name="hidden">1</attribute>
	    </xpath>
        <xpath expr="//input[@id='firstname']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
        <xpath expr="//input[@id='lastname']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
        <xpath expr="//input[@id='phone']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
    </template>

    <template id="iban_template_energetica" name="iban_template" inherit_id="cooperator_website.iban_template">
        <xpath expr="//div[@name='iban_template_container']" position="inside">
            <div class="form-group field-bank_account" t-attf-class="form-group #{error and 'iban' in error and 'has-error' or ''}" name="iban_container">
                <label for="iban" class="form-label">Bank Account Number</label>
                <input
                    class="form-control form-control-sm"
                    type="text"
                    name="iban"
                    id="iban"
                    required="True"
                    t-att-readonly="logged"
                    t-attf-value="#{iban or ''}"
                />

            </div>
            <br/>
            <div class="form-group" t-attf-class="form-group #{error and 'vat' in error and 'has-error' or ''}" name="vat_container">
                <label for="vat" class="form-label">VAT</label>
                <input
                    type="text"
                    class="form-control form-control-sm"
                    name="vat"
                    required="True"
                    t-attf-value="#{vat or ''}"
                />
            </div>
            <br/>
        </xpath>
    </template>

    <template id="share_div_energetica" inherit_id="cooperator_website.shares_template" name="Removing Share div">
        <xpath expr="//div[@name='share_div']" position="attributes">
            <attribute name="hidden">1</attribute>
        </xpath>
    </template>

    <template id="address_template_energetica" name="address_template" inherit_id="cooperator_website.address_template">
        <xpath expr="//div[@name='address_container']" position="replace">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 field-address" name="address_container">
                        <label for="address" class="form-label">Address</label>
                        <input
                            t-attf-class="form-control form-control-sm{{ error and 'address' in error and ' is-invalid' or '' }}"
                            type="text"
                            name="address"
                            id="address"
                            required="true"
                            t-att-readonly="logged"
                            t-att-value="address"
                        />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3 field-state" name="state_container">
                        <label for="state_id" class="form-label">Province</label>
                        <select
                            t-attf-class="form-select form-select-sm{{ error and 'state_id' in error and ' is-invalid' or '' }}"
                            id="state_id"
                            name="state_id"
                            required="true"
                            t-att-readonly="logged"
                        >
                            <option value=""/>
                            <t t-foreach="states or []" t-as="state">
                                <option t-att-value="state.id">
                                    <t t-out="state.name" />
                                </option>
                            </t>
                        </select>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//input[@id='city']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
        <xpath expr="//input[@id='zip_code']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
        <xpath expr="//div[@name='country_container']" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
    </template>

    <template id="becomecompanycooperator_energetica" name="becomecompanycooperator" inherit_id="cooperator_website.becomecompanycooperator">
        <xpath expr="//label[@for='company_register_number']/.." position="replace" />
        <!-- Remove Company type field -->
        <xpath expr="//label[@for='company_type']/.." position="replace" />
        <xpath expr="//input[@name='company_name']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
        <xpath expr="//input[@name='company_email']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
        <xpath expr="//input[@name='confirm_email']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
        <xpath expr="//input[@name='email']" position="attributes">
            <attribute name="placeholder" />
        </xpath>
    </template>
</odoo>
