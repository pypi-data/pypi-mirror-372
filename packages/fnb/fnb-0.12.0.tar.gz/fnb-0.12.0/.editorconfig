# Top-most EditorConfig file
root = true

# For default
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# For Markdown
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# For TOML
[*.toml]
indent_size = 2

# For YAML
[*.yaml,*.yml]
indent_size = 2

# For Shellscript
[*.sh]
indent_size = 2
