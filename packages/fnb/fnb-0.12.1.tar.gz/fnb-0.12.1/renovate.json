{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Asia/Tokyo",
  "schedule": ["before 6am on monday"],
  "labels": ["dependencies", "renovate"],
  "assignees": ["shotakaha"],
  "reviewers": ["shotakaha"],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "packageRules": [
    {
      "description": "Group Python development dependencies",
      "groupName": "Python dev dependencies",
      "matchCategories": ["dev"],
      "matchManagers": ["pip_requirements", "pipenv", "poetry"],
      "schedule": ["before 6am on monday"]
    },
    {
      "description": "Group Python production dependencies",
      "groupName": "Python production dependencies",
      "matchCategories": ["prod"],
      "matchManagers": ["pip_requirements", "pipenv", "poetry"],
      "schedule": ["before 6am on monday"]
    },
    {
      "description": "Automerge patch updates for stable packages",
      "matchUpdateTypes": ["patch"],
      "matchPackagePatterns": [
        "typer",
        "pydantic",
        "platformdirs",
        "python-dotenv"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Separate PRs for major updates",
      "matchUpdateTypes": ["major"],
      "prPriority": 10,
      "labels": ["dependencies", "renovate", "major-update"],
      "reviewers": ["shotakaha"]
    },
    {
      "description": "Group documentation dependencies",
      "groupName": "Documentation dependencies",
      "matchPackagePatterns": [
        "mkdocs",
        "mkdocs-material",
        "mkdocstrings"
      ],
      "schedule": ["before 6am on monday"]
    },
    {
      "description": "Group testing dependencies",
      "groupName": "Testing dependencies",
      "matchPackagePatterns": [
        "pytest",
        "coverage"
      ],
      "schedule": ["before 6am on monday"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "renovate"],
    "prPriority": 20
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on the first day of the month"]
  },
  "python": {
    "ignorePaths": [
      "**/.venv/**",
      "**/venv/**",
      "**/__pycache__/**"
    ]
  }
}
