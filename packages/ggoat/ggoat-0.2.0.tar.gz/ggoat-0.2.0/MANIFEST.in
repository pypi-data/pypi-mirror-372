# Include the README and license
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Include documentation
recursive-include docs *.rst *.md *.py *.txt *.yml
recursive-include docs/_static *
recursive-include docs/_templates *
include docs/Makefile
include docs/requirements.txt

# Include example notebooks
recursive-include examples *.ipynb *.py *.md

# Include test files
recursive-include tests *.py

# Include package assets
recursive-include src/ggoat/assets *.js *.css

# Include configuration files
include pyproject.toml
include setup.py
include .bumpversion.cfg

# Include GitHub workflows and templates
recursive-include .github *.yml *.yaml *.md

# Exclude development and build artifacts
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude *.log
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.egg-info
recursive-exclude * .pytest_cache
recursive-exclude * .coverage
recursive-exclude * htmlcov
recursive-exclude * .tox
recursive-exclude * build
recursive-exclude * dist
recursive-exclude docs/_build *
recursive-exclude docs/.doctrees *