include README.md
include LICENSE
include requirements.txt
include requirements-dev.txt

# Include all web UI static files
recursive-include jettask/webui/static *
recursive-include jettask/webui/frontend/dist *
recursive-include jettask/webui/frontend/src *
recursive-include jettask/webui/frontend/public *

# Include SQL schema files
include jettask/webui/*.sql

# Include HTML templates
include jettask/webui/*.html
recursive-include jettask/webui/templates *

# Include configuration files
include jettask/webui/*.json
include jettask/webui/*.yaml
include jettask/webui/*.yml

# Include backend files
recursive-include jettask/webui/backend *.py

# Include package.json for frontend
include jettask/webui/frontend/package.json
include jettask/webui/frontend/package-lock.json

# Exclude Python cache files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *~

# Exclude test files from distribution
prune tests
prune */tests
prune */test