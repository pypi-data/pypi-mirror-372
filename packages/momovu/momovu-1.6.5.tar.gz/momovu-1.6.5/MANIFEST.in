# Exclude entire documentation directory (187MB+ savings)
recursive-exclude docs *
prune docs

# Exclude test files (not needed by end users)
recursive-exclude tests *
prune tests

# Exclude development scripts
recursive-exclude scripts *
prune scripts

# Exclude development/build configuration files
exclude Makefile
exclude pytest.ini
exclude .gitignore
exclude BUILD.md

# Exclude build artifacts and cache directories
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .ruff_cache
global-exclude .mypy_cache
global-exclude .pytest_cache
global-exclude .hypothesis
global-exclude .coverage
global-exclude *.egg-info

# Exclude version control and IDE files
global-exclude .git*
global-exclude *.swp
global-exclude *.autosave

# Exclude environment directories (shouldn't be in git anyway, but just in case)
prune .venv
prune venv
prune env
