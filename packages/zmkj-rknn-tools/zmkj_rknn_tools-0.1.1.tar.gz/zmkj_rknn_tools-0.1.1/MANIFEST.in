# Include the README and license
include README.md
include LICENSE
include CHANGELOG.md
include STRUCTURE.md

# Include configuration files
include pyproject.toml
include requirements.txt

# Include source package
recursive-include src/zmkj_rknn_tools *.py
recursive-include src/zmkj_rknn_tools *.typed
recursive-include src/zmkj_rknn_tools/examples *.py
recursive-include src/zmkj_rknn_tools/examples *.md

# Exclude large files and data
exclude src/zmkj_rknn_tools/examples/*.pt
exclude src/zmkj_rknn_tools/examples/*.onnx
exclude src/zmkj_rknn_tools/examples/*.rknn
exclude src/zmkj_rknn_tools/examples/*.mp4
exclude src/zmkj_rknn_tools/examples/*.avi
exclude src/zmkj_rknn_tools/examples/*.jpg
exclude src/zmkj_rknn_tools/examples/*.png

# Exclude examples_data directory (separate package)
exclude examples_data
recursive-exclude examples_data *

# Exclude development and build files
exclude .pre-commit-config.yaml
exclude Makefile
exclude STRUCTURE.md
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * .DS_Store
exclude .gitignore
exclude .github
recursive-exclude .github *
exclude tests
recursive-exclude tests *
exclude venv*
recursive-exclude venv* *
exclude docs
recursive-exclude docs *