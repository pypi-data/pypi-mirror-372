# Include important configuration files
include README.md
include LICENSE
include requirements.txt
include CLAUDE.md
include pyproject.toml
include setup.py

# Include all CLI Arena package data
recursive-include cli_arena *.py
recursive-include cli_arena *.yaml
recursive-include cli_arena *.yml
recursive-include cli_arena *.json
recursive-include cli_arena *.md
recursive-include cli_arena *.txt
recursive-include cli_arena *.sh
recursive-include cli_arena *.template

# Include only essential repository structure and sample tasks
include repositories/*/tasks/*/task.yaml
include repositories/*/tasks/*/verify.sh
recursive-include repositories *.md
prune repositories/*/src
prune repositories/*/node_modules
prune repositories/*/vendor
prune repositories/*/target
prune repositories/*/build
prune repositories/*/.git
prune repositories/*/outputs

# Include Docker configurations
recursive-include docker *.dockerfile
recursive-include docker Dockerfile*
recursive-include docker *.sh
recursive-include docker *.yml
recursive-include docker *.yaml

# Include scripts
recursive-include scripts_bash *.sh
recursive-include scripts_python *.py

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.orig
global-exclude *.rej
global-exclude *.pyc
global-exclude .git*
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo
global-exclude *~
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .tox
recursive-exclude outputs *
recursive-exclude workspace *
recursive-exclude .git *