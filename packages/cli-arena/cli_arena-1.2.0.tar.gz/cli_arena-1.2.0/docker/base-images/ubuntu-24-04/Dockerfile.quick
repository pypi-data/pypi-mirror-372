FROM python:3.11-slim

# Mark as preserved
LABEL cli-arena.preserve=true

# Install minimal system deps
RUN apt-get update && apt-get install -y \
    git curl bash \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages
RUN pip install --no-cache-dir \
    anthropic \
    google-generativeai \
    openai \
    requests \
    PyYAML \
    python-dotenv \
    pytest \
    httpx \
    fastapi \
    uvicorn \
    sqlalchemy \
    python-jose \
    passlib \
    python-multipart \
    bcrypt

WORKDIR /app