# Include additional files in the package
include README.md
include LICENSE
include MANIFEST.in

# Include monitor files as documentation
include monitor/README.md
include monitor/shellhorn_monitor.py
include monitor/requirements.txt
include monitor/Dockerfile
include monitor/docker-compose.yml
include monitor/.env.example
include monitor/config/config.json
include monitor/config/secrets.json.example

# Include tests
recursive-include tests *.py

# Include examples
recursive-include examples *.py *.md

# Exclude development files
exclude setup_pypi.py
exclude .env.example
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store