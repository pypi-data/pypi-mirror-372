{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/ResConfig",
  "ResConfig": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "_fw_name": {
        "const": "{{virtmat.middleware.resconfig.resconfig.ResConfig}}"
      },
      "workers": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/WorkerConfig"
        },
        "minItems": 0
      },
      "default_worker": {
        "oneOf": [
          {
            "$ref": "#/definitions/WorkerConfig"
          },
          {
            "const": null
          }
        ]
      }
    },
    "required": [
      "_fw_name"
    ]
  },
  "definitions": {
    "WorkerConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_fw_name": {
          "const": "{{virtmat.middleware.resconfig.resconfig.WorkerConfig}}"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type_": {
          "enum": [
            "SLURM",
            null
          ]
        },
        "queues": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/QueueConfig"
          },
          "minItems": 0
        },
        "accounts": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 0
        },
        "modules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ModuleConfig"
          },
          "minItems": 0
        },
        "envvars": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "minLength": 0
          }
        },
        "default_modules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ModuleConfig"
          },
          "minItems": 0
        },
        "default_envvars": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 0
        },
        "default_venv": {
          "oneOf": [
            {
              "$ref": "#/definitions/VenvConfig"
            },
            {
              "const": null
            }
          ]
        },
        "default_launchdir": {
          "oneOf": [
            {
              "$ref": "generic.json#/AbsoluteFilePath"
            },
            {
              "const": null
            }
          ]
        },
        "default_commands": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CommandConfig"
          },
          "minItems": 0
        },
        "_default_queue": {
          "oneOf": [
            {
              "$ref": "#/definitions/QueueConfig"
            },
            {
              "const": null
            }
          ]
        },
        "_default_account": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "const": null
            }
          ]
        }
      },
      "required": [
        "_fw_name",
        "name"
      ]
    },
    "QueueConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_fw_name": {
          "const": "{{virtmat.middleware.resconfig.resconfig.QueueConfig}}"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "public": {
          "enum": [
            true,
            false,
            null
          ]
        },
        "resources": {
          "type": "array",
            "items": {
              "$ref": "#/definitions/ResourceConfig"
            },
            "minItems": 0
        },
        "accounts_allow": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 0
        },
        "accounts_deny": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 0
        },
        "groups_allow": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 0
        }
      },
      "required": [
        "_fw_name",
        "name"
      ]
    },
    "ResourceConfig": {
      "type": "object",
      "properties": {
        "_fw_name": {
          "const": "{{virtmat.middleware.resconfig.resconfig.ResourceConfig}}"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "_minimum": {
          "type": [
            "number",
            "null"
          ]
        },
        "_maximum": {
          "type": [
            "number",
            "null"
          ]
        },
        "_default": {
          "type": [
            "number",
            "null"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "_fw_name",
        "name",
        "_minimum",
        "_maximum",
        "_default"
      ]
    },
    "CommandConfig": {
      "type": "object",
      "properties": {
        "_fw_name": {
          "const": "{{virtmat.middleware.resconfig.resconfig.CommandConfig}}"
        },
        "cmd": {
          "type": "string",
          "minLength": 1
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 0
        },
        "commands": {
          "const": [
            "umask",
            "alias"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "_fw_name",
        "cmd",
        "commands"
      ]
    },
    "ModuleConfig": {
      "type": "object",
      "properties": {
        "_fw_name": {
          "const": "{{virtmat.middleware.resconfig.resconfig.ModuleConfig}}"
        },
        "prefix": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "const": null
            }
          ]
        },
        "name": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "const": null
            }
          ]
        },
        "versions": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string",
                "minLength": 1
              },
              {
                "const": null
              }
            ]
          }
        },
        "path": {
          "oneOf": [
            {
              "$ref": "generic.json#/AbsoluteFilePath"
            },
            {
              "const": null
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "_fw_name",
        "name"
      ]
    },
    "VenvConfig": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "conda",
            "venv"
          ]
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "prefix": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "name",
        "prefix"
      ]
    }
  }
}
