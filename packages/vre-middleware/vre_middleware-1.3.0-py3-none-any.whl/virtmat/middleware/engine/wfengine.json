{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/WFEngine",
  "WFEngine": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "_fw_name": {
        "const": "{{virtmat.middleware.engine.wfengine.WFEngine}}"
      },
      "launchpad": {
          "$ref": "launchpad.json#/LaunchPad"
      },
      "qadapter": {
        "oneOf": [
          {
            "$ref": "commonadapter.json#/CommonAdapter"
          },
          {
            "const": null
          }
        ]
      },
      "wf_query": {
        "type": [
          "object",
          "null"
        ]
      },
      "name": {
        "oneOf": [
          {
            "$ref": "generic.json#/Identifier"
          },
          {
            "const": null
          }
        ]
      },
      "launchdir": {
        "oneOf": [
          {
            "$ref": "generic.json#/AbsoluteFilePath"
          },
          {
            "const": null
          }
        ]
      },
      "unique_launchdir": {
        "enum": [
          true,
          false,
          null
        ]
      },
      "sleep_time": {
        "oneOf": [
          {
            "type": "integer",
            "minimum": 0
          },
          {
            "const": null
          }
        ],
        "default": 30
      }
    },
    "required": [
      "_fw_name",
      "launchpad"
    ]
  }
}
