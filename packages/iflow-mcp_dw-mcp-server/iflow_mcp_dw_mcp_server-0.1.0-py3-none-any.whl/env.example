# 语音转文字 MCP 服务器环境变量配置示例

# 服务器配置
MCP_SERVER_NAME=语音转文字服务
MCP_SERVER_VERSION=0.1.0
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_SERVER_DEBUG=false

# 音频处理配置
DEFAULT_LANGUAGE=zh-CN
DEFAULT_ENGINE=whisper
MAX_FILE_SIZE=100
TEMP_DIR=./temp

# 远程API配置
DEFAULT_API_TYPE=bailian
BAILIAN_API_KEY=your_bailian_api_key_here
BAILIAN_API_URL=https://bailian.aliyuncs.com/v1/audio/transcriptions
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1/audio/transcriptions
XUNFEI_API_KEY=your_xunfei_api_key_here
XUNFEI_API_URL=https://api.xfyun.cn/v1/service/v1/iat
API_TIMEOUT=30
API_MAX_RETRIES=3

# Google Speech Recognition 配置
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_TIMEOUT=30
GOOGLE_MAX_RETRIES=3

# CMU Sphinx 配置
SPHINX_LM_PATH=/path/to/language/model
SPHINX_AM_PATH=/path/to/acoustic/model
SPHINX_DICT_PATH=/path/to/dictionary

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=speech_to_text.log

# 开发配置
DEBUG=false
DEV_MODE=false 