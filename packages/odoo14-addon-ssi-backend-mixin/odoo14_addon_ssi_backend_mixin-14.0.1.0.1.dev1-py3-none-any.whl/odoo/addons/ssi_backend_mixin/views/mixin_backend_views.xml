<odoo>
<record id="backend_mixin_view_tree" model="ir.ui.view">
    <field name="name">backend_mixin - Tree</field>
    <field name="model">backend_mixin</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="backend_mixin_view_search" model="ir.ui.view">
    <field name="name">backend_mixin - Search</field>
    <field name="model">backend_mixin</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="backend_mixin_view_form" model="ir.ui.view">
    <field name="name">backend_mixin - Form</field>
    <field name="model">backend_mixin</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="priority">100</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//header" position="inside">
                <button
                        name="action_running"
                        string="Running"
                        type="object"
                        attrs="{'invisible':[('state','=','running')]}"
                    />
                <button
                        name="action_restart"
                        string="Restart"
                        type="object"
                        attrs="{'invisible':[('state','!=','running')]}"
                    />
                <field name="state" widget="statusbar" />
            </xpath>
            <xpath expr="//group[@name='group_1']" position="replace">
                <group name="header" colspan="4" col="2">
                    <group name="header_left" colspan="1" col="2">
                        <field name="name" />
                        <field name="code" />
                        <field name="company_id" groups="base.group_multi_company" />
                        <field name="active" widget="boolean_toggle" />
                    </group>
                    <group name="header_right" colspan="1" col="2">
                    </group>
                </group>
            </xpath>
        </data>
    </field>
</record>
</odoo>
