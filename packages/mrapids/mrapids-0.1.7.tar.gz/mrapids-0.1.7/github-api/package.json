{
  "name": "github-api-tests",
  "version": "1.0.0",
  "description": "GitHub API testing with MicroRapid",
  "scripts": {
    "api:help": "echo 'Available commands: npm run api:list-ops, npm run api:user, npm run api:repos, etc.'",
    "api:list-ops": "mrapids list operations",
    "api:list-get": "mrapids list -m GET",
    "api:list-post": "mrapids list -m POST",
    
    "api:user": "mrapids run users/get-authenticated --header \"Authorization: token $GITHUB_TOKEN\"",
    "api:user:repos": "mrapids run repos/list-for-authenticated-user --header \"Authorization: token $GITHUB_TOKEN\"",
    "api:user:starred": "mrapids run activity/list-repos-starred-by-authenticated-user --header \"Authorization: token $GITHUB_TOKEN\" --param per_page=10",
    
    "api:repos:list": "mrapids run repos/list-for-user --param username=${USER:-octocat} --param per_page=5",
    "api:repos:get": "mrapids run repos/get --param owner=${OWNER:-octocat} --param repo=${REPO:-Hello-World}",
    
    "api:gist:create": "mrapids run gists/create --header \"Authorization: token $GITHUB_TOKEN\" --file data/examples/gists-create.json",
    "api:gist:list": "mrapids run gists/list-for-authenticated-user --header \"Authorization: token $GITHUB_TOKEN\"",
    
    "api:star": "mrapids run activity/star-repo-for-authenticated-user --header \"Authorization: token $GITHUB_TOKEN\" --param owner=${OWNER:-octocat} --param repo=${REPO:-Hello-World}",
    "api:unstar": "mrapids run activity/unstar-repo-for-authenticated-user --header \"Authorization: token $GITHUB_TOKEN\" --param owner=${OWNER:-octocat} --param repo=${REPO:-Hello-World}",
    
    "test:auth": "npm run api:user",
    "test:basic": "npm run api:repos:list && npm run api:repos:get",
    "test:all": "npm run test:auth && npm run test:basic",
    
    "generate:requests": "bash generate-requests.sh",
    "generate:curl": "bash github-curl-examples.sh > curl-commands.txt"
  },
  "keywords": ["github", "api", "testing", "mrapids"],
  "author": "",
  "license": "MIT"
}