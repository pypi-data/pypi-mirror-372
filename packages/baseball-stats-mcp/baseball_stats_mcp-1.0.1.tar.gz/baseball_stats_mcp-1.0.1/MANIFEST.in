# Include important files in the package
include README.md
include LICENSE
include requirements.txt
include mcp_config.json
include TEST_SUITE_SUMMARY.md

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include examples
recursive-include examples *.py *.md *.json

# Include tests
recursive-include tests *.py *.md *.json

# Exclude development files
exclude .gitignore
exclude *.pyc
exclude .git*
exclude test_*.py
exclude *test.py
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
