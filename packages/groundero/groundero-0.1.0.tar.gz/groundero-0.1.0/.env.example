# Maximum PDF file size in MB (default: 5.0)
# PDFs larger than this will be skipped during processing
GROUNDERO_MAX_PDF_SIZE_MB=5.0

# Embedding Model Configuration
# HuggingFace model ID for text embeddings (default: sentence-transformers/all-MiniLM-L6-v2)
EMBED_MODEL_ID=sentence-transformers/all-MiniLM-L6-v2

# Tokenizers Configuration
# Disable tokenizers parallelism to avoid warnings (default: false)
TOKENIZERS_PARALLELISM=false

# RAG Prompt Template Configuration
# Custom prompt template for LLM responses (supports {context} and {input} placeholders)
# Uncomment and modify to customize the AI's response style
# GROUNDERO_PROMPT_TEMPLATE="Context information is below.\n---------------------\n{context}\n---------------------\nGiven the context information and not prior knowledge, answer the query.\nQuery: {input}\nAnswer:\n"

# Zotero Configuration

# Use local Zotero instance (recommended for testing)
ZOTERO_LOCAL=true

# For LOCAL Zotero (ZOTERO_LOCAL=true):
# - No API key needed
# - Library ID can be omitted (defaults to "0")
# - Zotero desktop app must be running

# For REMOTE Zotero API (ZOTERO_LOCAL=false):
# - Uncomment and fill in the values below
# - Get API key from: https://www.zotero.org/settings/keys
# ZOTERO_LIBRARY_ID=your_user_id_here
# ZOTERO_API_KEY=your_api_key_here
# ZOTERO_LIBRARY_TYPE=user