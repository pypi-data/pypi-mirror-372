# Example environment variables for pytest-checkmate
# Copy this file to .env and customize the values for your tests

# API Configuration
API_BASE_URL=https://api.example.com
API_KEY=your-api-key-here
API_TIMEOUT=30

# Database Configuration (for integration tests)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_database
DB_USER=test_user
DB_PASSWORD=test_password

# Feature Flags
FEATURE_ANALYTICS=enabled
FEATURE_NEW_UI=disabled
DEBUG_MODE=false

# Test Data Configuration
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# External Service URLs
PAYMENT_SERVICE_URL=https://payments.example.com
NOTIFICATION_SERVICE_URL=https://notifications.example.com
