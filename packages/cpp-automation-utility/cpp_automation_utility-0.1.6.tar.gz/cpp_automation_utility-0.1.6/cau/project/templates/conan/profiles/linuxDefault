[settings]
os=Linux
arch=x86_64
compiler=clang
compiler.version={{ build.clang_version }}
compiler.libcxx=libstdc++11
compiler.cppstd={{ build.cpp_standard }}
build_type=Debug
[conf]
tools.cmake.cmaketoolchain:system_name=Linux
tools.cmake.cmaketoolchain:generator=Ninja
tools.build:cxxflags=["-gdwarf-4"]
[buildenv]
CC=/usr/bin/clang-{{ build.clang_version }}
CXX=/usr/bin/clang++-{{ build.clang_version }}
