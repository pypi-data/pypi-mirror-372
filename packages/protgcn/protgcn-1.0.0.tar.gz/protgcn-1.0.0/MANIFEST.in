# Include important documentation files
include README.md
include PYPI_Description.md
include LICENSE
include requirements.txt

# Include all Python source files
recursive-include gcndesign *.py

# Include model parameter files
recursive-include gcndesign/params *.pkl

# Include scripts
recursive-include scripts *.py

# Include web interface files
include app.py
recursive-include templates *.html

# Include validation and utility scripts
include quick_validation.py
include visualization.py

# Include example files
include *.pdb

# Exclude unwanted files and directories
global-exclude *.pyc
global-exclude __pycache__/*
global-exclude .git*
global-exclude *.egg-info/*
global-exclude .pytest_cache/*
global-exclude gcndesign_env/*
global-exclude dist/*
global-exclude build/*
exclude .gitignore