<odoo>
<record id="hr_employee_view_form" model="ir.ui.view">
    <field name="name">form hr.employee</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="ssi_hr_employee_stock.hr_employee_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath
                    expr="//button[@name='action_delete_employee_location']"
                    position="after"
                >
                <button
                        name="action_create_equipment_request_route"
                        type="object"
                        string="Create Equipment Request Route"
                        class="oe_highlight"
                        icon="fa-gears"
                    />
            </xpath>
            <xpath expr="//group[@name='inventory_1']" position="after">
                <field name="equipment_request_route_ids" readonly="1">
                    <tree>
                        <field name="warehouse_id" />
                        <field name="route_id" />
                    </tree>
                </field>
            </xpath>
        </data>
    </field>
</record>

</odoo>
