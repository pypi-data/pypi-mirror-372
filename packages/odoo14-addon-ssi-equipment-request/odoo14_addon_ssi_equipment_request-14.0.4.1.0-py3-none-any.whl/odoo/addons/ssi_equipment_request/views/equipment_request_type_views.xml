<odoo>
<record id="equipment_request_type_view_tree" model="ir.ui.view">
    <field name="name">equipment_request_type - Tree</field>
    <field name="model">equipment_request_type</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="equipment_request_type_view_search" model="ir.ui.view">
    <field name="name">equipment_request_type - Search</field>
    <field name="model">equipment_request_type</field>
    <field name="mode">primary</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="equipment_request_type_view_form" model="ir.ui.view">
    <field name="name">equipment_request_type - Form</field>
    <field name="model">equipment_request_type</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//page[last()]" position="before">
                <page name="product" string="Product">
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="equipment_request_type_action" model="ir.actions.act_window">
    <field name="name">Equipment Request Types</field>
    <field name="res_model">equipment_request_type</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="equipment_request_type_menu"
        name="Types"
        parent="menu_equipment_request_config"
        action="equipment_request_type_action"
        groups="equipment_request_type_group"
        sequence="10"
    />
</odoo>
