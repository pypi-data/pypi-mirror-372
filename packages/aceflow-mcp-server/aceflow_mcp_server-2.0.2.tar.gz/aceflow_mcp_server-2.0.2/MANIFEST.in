# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CURSOR_INTEGRATION_GUIDE.md
include ARCHITECTURE_DESIGN.md
include IMPLEMENTATION_PLAN.md
include MCP_INTERFACE_SPEC.md

# Include all templates and configurations
recursive-include aceflow_mcp_server/templates *
recursive-include aceflow_mcp_server/config *.json
recursive-include aceflow_mcp_server/schemas *.json

# Include example configurations
include examples/*.json
include examples/*.yaml
include examples/*.yml

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude pytest.ini
exclude tox.ini
exclude .coverage
exclude .pytest_cache
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.pyo
recursive-exclude * .DS_Store