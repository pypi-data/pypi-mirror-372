<odoo>
<record id="mail_message_view_form" model="ir.ui.view">
    <field name="name">mail.message - Telegram</field>
    <field name="model">mail.message</field>
    <field name="inherit_id" ref="mail.mail_message_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//notebook" position="inside">
                <page string="Telegram" name="telegram">
                    <field name="telegram_ids">
                        <tree>
                            <field name="chat_id" />
                            <field name="telegram_message_id" />
                            <field name="chat_username" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </data>
    </field>
</record>
</odoo>
