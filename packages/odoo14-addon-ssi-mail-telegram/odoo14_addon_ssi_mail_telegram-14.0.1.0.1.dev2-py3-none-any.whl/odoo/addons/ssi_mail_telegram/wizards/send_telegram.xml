<odoo>

<record id="send_telegram_view_form" model="ir.ui.view">
    <field name="name">Send Message to Telegram</field>
    <field name="model">send_telegram</field>
    <field name="arch" type="xml">
        <form>
            <group name="group_1" colspan="4" col="2">
                <field name="backend_id" />
                <field name="allowed_chat_ids" widget="many2many_tags" invisible="1" />
                <field name="chat_id" domain="[('id','in',allowed_chat_ids)]" />
                <field name="message_id" invisible="1" />
            </group>
            <footer>
                <button
                        string="Send"
                        name="action_send"
                        type="object"
                        class="oe_highlight"
                        icon="fa-send"
                    />
                or
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
        </form>
    </field>
</record>

<record id="send_telegram_action" model="ir.actions.act_window">
    <field name="name">Send Message to Telegram</field>
    <field name="res_model">send_telegram</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="send_telegram_view_form" />
    <field name="target">new</field>
</record>

</odoo>
