<template>
    <t t-inherit="mail.Message" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_Message_header')]" t-operation="inside">
            <span
                class="fa o_Message_telegram fa-brands fa-telegram"
                role="button"
                tabindex="0"
                t-att-title="'Send to telegram'"
                t-on-click="_onClickSendToTelegram"
                t-att-data-message-id="message &amp;&amp; message.id"
            />
        </xpath>
        <xpath
            expr="//div[hasclass('o_Message')]"
            t-operation="inside"
            t-position="append"
        >
            <div
                class="telegram-links-placeholder"
                t-att-data-message-id="message.id"
            />
        </xpath>
    </t>
</template>
