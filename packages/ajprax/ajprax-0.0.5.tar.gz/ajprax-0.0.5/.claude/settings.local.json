{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(source:*)",
      "Bash(hatch test:*)",
      "Bash(sed:*)",
      "Bash(python3:*)",
      "Bash(hatch run:*)",
      "Edit",
      "MultiEdit",
      "Write",
      "Read",
      "Update"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "git add -A && git commit -m \"claude wip\""
          }
        ]
      }
    ]
  }
}
