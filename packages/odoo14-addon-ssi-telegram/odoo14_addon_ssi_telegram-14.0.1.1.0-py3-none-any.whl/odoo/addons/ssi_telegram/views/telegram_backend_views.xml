<odoo>
<record id="telegram_backend_view_tree" model="ir.ui.view">
    <field name="name">telegram_backend - Tree</field>
    <field name="model">telegram_backend</field>
    <field name="inherit_id" ref="ssi_backend_mixin.backend_mixin_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="telegram_backend_view_search" model="ir.ui.view">
    <field name="name">telegram_backend - Search</field>
    <field name="model">telegram_backend</field>
    <field name="inherit_id" ref="ssi_backend_mixin.backend_mixin_view_search" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="telegram_backend_view_form" model="ir.ui.view">
    <field name="name">telegram_backend - Form</field>
    <field name="model">telegram_backend</field>
    <field name="inherit_id" ref="ssi_backend_mixin.backend_mixin_view_form" />
    <field name="priority">100</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="send_webhook_id" />
                <field name="bot_token" />
            </xpath>
            <xpath expr="//page[@name='note']" position="before">
                <page name="chats" string="Chats">
                    <field name='chat_ids'>
                        <tree editable="bottom">
                            <field name="description" />
                            <field name="name" />
                            <field name="username" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="telegram_backend_action" model="ir.actions.act_window">
    <field name="name">Telegram Backends</field>
    <field name="res_model">telegram_backend</field>
    <field name="view_mode">tree,form</field>
</record>


<menuitem
        id="telegram_backend_menu"
        name="Backends"
        parent="telegram_configuration_menu"
        groups="base.group_system"
        action="telegram_backend_action"
        sequence="1"
    />
</odoo>
