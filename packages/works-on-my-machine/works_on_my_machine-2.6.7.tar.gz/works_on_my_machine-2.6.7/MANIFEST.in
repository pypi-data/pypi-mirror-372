# WOMM Package Manifest
# This file controls what files are included in the package distribution

# Include README and documentation
include README.md
include LICENSE
include pyproject.toml

# Include main scripts for git clone usage
include womm.py
include womm.bat

# Include complete womm package
recursive-include womm *.py
recursive-include womm *.json
recursive-include womm *.yaml
recursive-include womm *.yml
recursive-include womm *.txt
recursive-include womm *.template
recursive-include womm *.config.*
recursive-include womm *.md
recursive-include womm templates *
recursive-include womm configs *
recursive-include womm vscode *
recursive-include womm scripts *
recursive-include womm bin *

# Exclude development files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude .cursor
global-exclude .coverage
global-exclude htmlcov
global-exclude build
global-exclude dist
global-exclude *.egg-info
global-exclude .venv
global-exclude venv
global-exclude node_modules
global-exclude .vscode
global-exclude .idea
global-exclude *.log
global-exclude .DS_Store
global-exclude Thumbs.db
global-exclude *_temp.*
global-exclude *.mdc
global-exclude cspell.json
global-exclude benchmarks
global-exclude coverage
global-exclude ignore-install.txt
global-exclude MANIFEST
# pyproject.toml is needed for package installation
global-exclude Makefile
global-exclude setup.py
global-exclude tests
global-exclude tests/run_tests.py

# Exclude PyPI deployment files
global-exclude PYPI_DEPLOYMENT.md

# Exclude temporary and cache directories
global-exclude temp/
global-exclude tmp/
global-exclude _temp/
global-exclude .cache/

# Exclude documentation (not needed for installation)
global-exclude docs/

# Exclude development configuration
global-exclude .pre-commit-config.yaml
global-exclude .cspell-dict/

# Exclude backup files
global-exclude *.bak
global-exclude *.backup
global-exclude *.orig 