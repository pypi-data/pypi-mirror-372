include README.md
include ABOUT.md
include pyproject.toml

# Include typing marker
include broadie/py.typed

# Include packaged assets and templates
graft broadie/static/ui
graft broadie/templates

# Prune development and workspace-only directories from sdist
prune tests
prune broad-ui
prune space
prune .github
prune .idea

# Exclude common junk files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude .DS_Store
