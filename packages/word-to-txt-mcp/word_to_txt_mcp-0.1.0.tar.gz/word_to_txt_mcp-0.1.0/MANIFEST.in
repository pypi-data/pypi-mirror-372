# 包含在分发包中的额外文件

# 文档文件
include README.md
include LICENSE
include CHANGELOG.md

# 配置文件
include requirements.txt
include setup.cfg
include pyproject.toml

# 排除不需要的文件
exclude .gitignore
exclude .github/*
exclude tests/*
exclude docs/*
exclude *.pyc
exclude __pycache__/*

# 递归包含包目录下的所有Python文件
recursive-include word_to_txt_mcp *.py

# 排除测试和开发文件
prune tests
prune docs
prune .git
prune __pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store