<odoo>
    <record id="webhook_auth_view_tree" model="ir.ui.view">
        <field name="name">webhook_auth - Tree</field>
        <field name="model">webhook_auth</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <record id="webhook_auth_view_search" model="ir.ui.view">
        <field name="name">webhook_auth - Search</field>
        <field name="model">webhook_auth</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="webhook_auth_view_form" model="ir.ui.view">
        <field name="name">webhook_auth - Form</field>
        <field name="model">webhook_auth</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group[@name='group_1']" position="replace">
                    <group name="header" colspan="4" col="2">
                        <group name="header_left" colspan="1" col="2">
                            <field name="name" />
                            <field name="code" />
                            <field name="active" widget="boolean_toggle" />
                        </group>
                        <group name="header_right" colspan="1" col="2">
                            <field name="type" />
                            <field
                                name="grant_type"
                                attrs="{'invisible': [('type', '!=', 'oauth2')], 'required': [('type', '=', 'oauth2')]}"
                            />
                            <field
                                name="username"
                                attrs="{'invisible': [('type', 'not in', ['basic', 'digest']), ('grant_type', '!=', 'password')], 'required': ['|', ('type', 'in', ['basic', 'digest']), ('grant_type', '=', 'password')]}"
                            />
                            <field
                                name="password"
                                password="True"
                                attrs="{'invisible': [('type', 'not in', ['basic', 'digest']), ('grant_type', '!=', 'password')], 'required': ['|', ('type', 'in', ['basic', 'digest']), ('grant_type', '=', 'password')]}"
                            />
                            <field
                                name="token_url"
                                attrs="{'invisible': [('type', '!=', 'oauth2')], 'required': [('type', '=', 'oauth2')]}"
                            />
                            <field
                                name="client_id"
                                attrs="{'invisible': [('type', 'not in', ['oauth1', 'oauth2'])], 'required': [('type', 'in', ['oauth1', 'oauth2'])]}"
                            />
                            <field
                                name="client_secret"
                                password="True"
                                attrs="{'invisible': [('type', 'not in', ['oauth1', 'oauth2'])], 'required': [('type', 'in', ['oauth1', 'oauth2'])]}"
                            />
                            <field
                                name="api_key"
                                attrs="{'invisible': [('type', '!=', 'api')], 'required': [('type', '=', 'api')]}"
                            />
                            <field
                                name="resource_owner_key"
                                attrs="{'invisible': [('type', '!=', 'oauth1')], 'required': [('type', '=', 'oauth1')]}"
                            />
                            <field
                                name="resource_owner_secret"
                                password="True"
                                attrs="{'invisible': [('type', '!=', 'oauth1')], 'required': [('type', '=', 'oauth1')]}"
                            />
                            <field
                                name="signature_method"
                                attrs="{'invisible': [('type', '!=', 'oauth1')], 'required': [('type', '=', 'oauth1')]}"
                            />
                        </group>
                    </group>
                </xpath>
            </data>
        </field>
    </record>

    <record id="webhook_auth_action" model="ir.actions.act_window">
        <field name="name">Authentications</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">webhook_auth</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="webhook_auth_menu"
        name="Authentications"
        parent="webhook_configuration_menu"
        action="webhook_auth_action"
        groups="webhook_auth_group"
        sequence="1"
    />

</odoo>
