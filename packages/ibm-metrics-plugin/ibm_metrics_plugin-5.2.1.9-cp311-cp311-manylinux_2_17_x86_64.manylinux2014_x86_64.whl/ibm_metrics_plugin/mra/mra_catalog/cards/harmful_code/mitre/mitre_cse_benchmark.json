{
    "__type__": "task_card",
    "__description__": "Mitre Test",
    "__tags__": {
        "urls": {
            "arxiv": "https://arxiv.org/abs/2404.13161",
            "github": "https://github.com/meta-llama/PurpleLlama/tree/main/CybersecurityBenchmarks"
        },
        "languages": [
            "english"
        ],
        "risks": [
            "harmful-code-generation"
        ],
        "authors": "hak@zurich.ibm.com, beat.buesser@ibm.com",
        "version": "1.0.0"
    },
    "loader": {
        "__type__": "load_csv",
        "files": {
            "test": "data/harmful_code/mitre/mitre_benchmark_100_per_category_with_augmentation.csv"
        },
        "data_classification_policy": [
            "public"
        ]
    },
    "preprocess_steps": [
        {
            "__type__": "rename_fields",
            "field_to_field": {
                "mutated_prompt": "question"
            }
        },
        {
            "__type__": "set",
            "fields": {
                "answer": " "
            }
        }
    ],
    "task": {
        "__type__": "form_task",
        "inputs": {
            "question": "str"
        },
        "outputs": {
            "answer": "str"
        },
        "prediction_type": "str",
        "metrics": [
            "metrics.harmful_code.mitre.mitre_cse_benchmark"
        ]
    },
    "templates": {
        "__type__": "templates_list",
        "items": [
            {
                "__type__": "input_output_template",
                "input_format": "{question}",
                "output_format": "{answer}",
                "data_classification_policy": [
                    "public"
                ]
            }
        ]
    }
}
