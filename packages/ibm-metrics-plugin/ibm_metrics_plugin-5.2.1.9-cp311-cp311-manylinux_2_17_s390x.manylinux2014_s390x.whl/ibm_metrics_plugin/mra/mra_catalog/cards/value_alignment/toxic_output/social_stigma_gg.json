{
    "__type__": "task_card",
    "__tags__": {
        "languages": [
            "english"
        ],
        "authors": "elizabeth.daly@ie.ibm.com",
        "version": "1.0.0"
    },
    "loader": {
        "__type__": "load_hf",
        "path": "ibm/SocialStigmaQA",
        "name": "cot",
        "data_classification_policy": [
            "public"
        ]
    },
    "preprocess_steps": [
        {
            "__type__": "rename",
            "field_to_field": {
                "biased answer": "assistant"
            }
        },
        {
            "__type__": "rename",
            "field_to_field": {
                "prompt": "user"
            }
        },
        {
            "__type__": "split_random_mix",
            "mix": {
                "train": "test[50%]",
                "test": "test[80%]"
            }
        }
    ],
    "task": {
        "__type__": "task",
        "input_fields": {
            "user": "str",
            "assistant": "str"
        },
        "reference_fields": {},
        "prediction_type": "str",
        "metrics": [
            {
                "__type__": "granite_guardian_assistant_risk",
                "risk_name": "harm",
                "prediction_type": "str"
            }
        ]
    },
    "templates": [
        "templates.empty"
    ]
}
