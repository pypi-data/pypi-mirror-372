{
  "mcpServers": {
    "devctl-mcp": {
      "command": "uvx",
      "args": ["--refresh", "--from", ".", "devctl-mcp"],
      "env": {}
    }
  },
  "opentrace": {
    "type": "http",
    "url": "https://api.opentrace.ai/mcp/v1",
    "headers": {
      "Authorization": "Bearer ${OPENTRACE_API_TOKEN}"
    }
  }
}
